{
    "name": "Video Stats Overlay",
    "description": "Overlay on video elements, displaying media debug stats",
    "version": "1.1",
    "manifest_version": 3,
    "permissions": ["tabs"],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
    "action": {
      "default_popup": "index.html",
      "default_title": "Video Stats Overlay"
    }
  }
